<Window x:Class="JSReport.ReportSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ReportSelectWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" LastChildFill="True">
            <Label DockPanel.Dock="Top" Name="selectLabel">Select the report ...</Label>
            <ListBox Name="choiceListBox" Grid.Row="1"></ListBox>
        </DockPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="okButton" IsCancel="False" MinWidth="100" Margin="2" Click="okButton_Click">Select</Button>
            <Button Name="cancelButton" IsCancel="True" MinWidth="100" Margin="2">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
